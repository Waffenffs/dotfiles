{
    // Last updated: 2/24/2024
    // Extensions installed:
    // - Gruvbox Material
    // - Kanagawa Black
    // - Error Lens
    // - Material Icon Theme
    // - Prettier - Code formatter
    // - Go

    "security.workspace.trust.untrustedFiles": "open",
    "scm.diffDecorations": "gutter",
    "breadcrumbs.enabled": false,

    // JS/TS
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.importModuleSpecifier": "non-relative",

    // Go
    "gopls": {
        "ui.semanticTokens": true
    },

    // Git
    "git.autofetch": true,
    "git.openRepositoryInParentFolders": "never",

    // Explorer
    "explorer.confirmDelete": false,
    "explorer.decorations.colors": false,

    // Terminal
    "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
    "terminal.integrated.fontSize": 13,

    // Workbench
    "workbench.startupEditor": "none",
    "workbench.editor.enablePreview": false,
    "workbench.editor.decorations.colors": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.renderIndentGuides": "none",
    "workbench.colorTheme": "Kanagawa Black",
    "workbench.tree.enableStickyScroll": false,
    "workbench.editor.showTabs": "multiple",
    "workbench.activityBar.location": "top",
    "workbench.layoutControl.enabled": false,
    "workbench.sideBar.location": "right",
    "workbench.statusBar.visible": false,
    // "workbench.colorCustomizations": {
    //     "editor.background": "#00000000"
    // },

    // Window
    "window.customTitleBarVisibility": "windowed",
    "window.zoomLevel": 1,
    "window.title": " ",
    "window.titleBarStyle": "custom",
    "window.commandCenter": false,

    // Editor
    "editor.fontSize": 13,
    "editor.semanticHighlighting.enabled": "configuredByTheme",
    // "editor.fontFamily": "Iosevka Expanded",
    // "editor.fontFamily": "Fira Code",
    "editor.fontFamily": "JetBrains Mono", // Light for themes like Tokyo Night
    "editor.fontLigatures": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    // Configurations from Reddit to fix autocomplete
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.tabCompletion": "on",
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "on",
        "strings": "on"
    },
    //
    "editor.scrollbar.verticalScrollbarSize": 5,
    "editor.scrollbar.horizontal": "hidden",
    "editor.minimap.enabled": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.guides.indentation": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "editor.stickyScroll.scrollWithEditor": false,
    // "editor.renderWhitespace": "boundary",

    // Formatting
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[go]": {
        "editor.defaultFormatter": "golang.go"
    },

    /* EXTENSIONS */

    // Prettier
    "prettier.jsxSingleQuote": true,
    "prettier.tabWidth": 4
}
